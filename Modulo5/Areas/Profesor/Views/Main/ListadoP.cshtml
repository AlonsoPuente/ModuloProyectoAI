@model IEnumerable<CoreDA.Proyecto>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abstract)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_pub)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_ini)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_fin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link_file)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Usuario_crea)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo, "Título del proyecto")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abstract, "Abstract")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keywords, "Palabras clave")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_pub, "Fecha de publicación")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo, "Tipo de proyecto")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_ini, "Fecha de inicio")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_fin, "Fecha de finalización")
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Link_file, "Archivo del proyecto")
            </td>

            @*<td>
                    @if (item.Link_file != null)
                        {
                        <img src="~/Projects/@item.Link_file" data-nombre="@item.Link_file" />
                    }
                    else
                    {
                        <img src="~/Projects/Default.jpg" height="70" width="50">
                    }

                </td>*@

            <td>
                @Html.DisplayFor(modelItem => item.Estado, "Estado actual")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Usuario_crea, "Usuario creador")
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { area = "Profesor", ID = item.ID_Proyecto }, null) |
                @Html.ActionLink("Eliminar", "Eliminar", new { area = "Profesor", ID = item.ID_Proyecto }, null)
            </td>
        </tr>
    }

</table>